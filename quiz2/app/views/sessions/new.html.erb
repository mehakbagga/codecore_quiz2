<h1 class="mb-3">Log In</h1>

<%= form_tag session_path do %>
    <div class="mb-3">
        <%= label_tag :email,"Email", class: 'form-label' %>
        <%= email_field_tag :email,"", class: 'form-control' %>  
    </div>
    <div class="mb-3">
        <%= label_tag :password, "Password", class: "form-label" %>
        <%= password_field_tag :password,"", class: "form-control" %>  
    </div>
    <div>
        <%= submit_tag "Log In", class:"btn btn-info mb-5" %> 
    </div>
<% end %>  

<h1 class="mb-3">Do not have an account? Sign Up:</h1>
<%= link_to "Sign Up", new_user_path, class:"green" %> 